                                android:layout_height="wrap_content"
                                android:fontFamily="@font/figtree_medium"
                                android:text="Timer"
                                android:textColor="@color/black"
                                android:textSize="26sp" />


                            <EditText
                                android:id="@+id/et_timeout_load_in"
