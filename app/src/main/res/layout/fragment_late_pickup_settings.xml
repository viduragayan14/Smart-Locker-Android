                                android:layout_height="wrap_content"
                                android:fontFamily="@font/figtree_medium"
                                android:text="When Full"
                                android:textColor="@color/black"
                                android:textSize="26sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <Spinner
                                    android:id="@+id/spinner_when_full_bay_color_settings"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:background="@drawable/white_curved_bg_border"
                                    android:fontFamily="@font/figtree_medium"
                                    android:paddingHorizontal="20dp"
                                    android:spinnerMode="dropdown"
                                    android:textSize="26sp" />

                                <ImageView
                                    android:layout_width="34dp"
                                    android:layout_height="34dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="20dp"
                                    android:src="@drawable/keyboard_arrow_down" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_when_reloading_bay_color_settings"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/figtree_medium"
                                android:text="When Reloading"
                                android:textColor="@color/black"
                                android:textSize="26sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <Spinner
                                    android:id="@+id/spinner_when_reloading_bay_color_settings"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:background="@drawable/white_curved_bg_border"
                                    android:fontFamily="@font/figtree_medium"
                                    android:paddingHorizontal="20dp"
                                    android:spinnerMode="dropdown"
                                    android:textSize="26sp" />

                                <ImageView
                                    android:layout_width="34dp"
                                    android:layout_height="34dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="20dp"
                                    android:src="@drawable/keyboard_arrow_down" />

                            </RelativeLayout>


                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/btn_save_bay_color_fragment"
                            android:layout_width="210dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/pill_shaped_orange_btn">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/figtree_medium"
                                android:text="SAVE"
                                android:textColor="@color/black"
                                android:textSize="26sp" />


                        </RelativeLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_keyboard_father"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#181818"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent">

            <android.inputmethodservice.KeyboardView
                android:id="@+id/kv_keyboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#181818"
                android:keyBackground="@drawable/white_curved_bg"
                android:keyTextColor="#000000"
                android:keyTextSize="26sp"
                android:shadowRadius="0.0" />
        </LinearLayout>

    </RelativeLayout>

