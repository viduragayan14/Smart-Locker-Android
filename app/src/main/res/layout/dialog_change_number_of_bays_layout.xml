<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="860dp"
    android:layout_height="540dp">

    <RelativeLayout
        android:layout_width="860dp"
        android:layout_height="540dp"
        android:background="@drawable/white_curved_bg">

        <ImageView
            android:id="@+id/close"
            android:layout_width="105dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:srcCompat="@drawable/cancel" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/figtree_regular"
                android:gravity="center"
                android:text="Saved"
                android:textColor="@color/black"
                android:textSize="50sp" />


            <ImageView
                android:id="@+id/imgVw_error_pickup_flow"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/textView1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/success" />


            <ProgressBar
                android:id="@+id/progressbar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgVw_error_pickup_flow"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/curved_progress_bar" />

            <TextView
                android:id="@+id/seconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressbar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/figtree_medium"
                android:text="5 secs left"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>