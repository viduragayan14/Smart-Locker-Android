<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="20dp"
    tools:context=".fragments.BayManagementFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_no_of_bays_bay_settings_fragment"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/figtree_medium"
                    android:text="Number of available Bays"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp">

                    <Spinner
                        android:id="@+id/spinner_no_of_bays_bay_settings_fragment"
                        android:layout_width="350dp"
                        android:layout_height="60dp"
                        android:background="@drawable/edit_text_settings_shape"
                        android:fontFamily="@font/figtree_medium"
                        android:paddingHorizontal="20dp"
                        android:spinnerMode="dropdown"
                        android:textSize="26sp" />

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/keyboard_arrow_down" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_control_bay_management_fragment"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/figtree_medium"
                    android:text="Screen Bay"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp">

                    <Spinner
                        android:id="@+id/spinner_control_bay_bay_settings_fragment"
                        android:layout_width="350dp"
                        android:layout_height="60dp"
                        android:background="@drawable/edit_text_settings_shape"
                        android:fontFamily="@font/figtree_medium"
                        android:paddingHorizontal="20dp"
                        android:spinnerMode="dropdown"
                        android:textSize="26sp" />

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/keyboard_arrow_down" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_test_bay_settings_fragment"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/gray_curved_bg_border"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/text_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/figtree_semibold"
                        android:text="OPEN"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/text_upload"
                        android:src="@drawable/lock_open_right" />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/btn_save_bay_fragment2"
                    style="@style/round_orange_btn_style_new"
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/pill_shaped_orange_btn">

                    <TextView
                        android:id="@+id/text_save2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/figtree_semibold"
                        android:text="Save Bays"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_save_bay_fragment"
                    style="@style/round_orange_btn_style_new"
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/pill_shaped_orange_btn">

                    <TextView
                        android:id="@+id/text_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/figtree_semibold"
                        android:text="Save Service Bay"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_open_bays"
                    style="@style/round_orange_btn_style_new"
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/pill_shaped_orange_btn">

                    <TextView
                        android:id="@+id/text_open_bays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/figtree_semibold"
                        android:text="Open All Bays"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_update_leds"
                    style="@style/round_orange_btn_style_new"
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/pill_shaped_orange_btn">

                    <TextView
                        android:id="@+id/text_update_leds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/figtree_semibold"
                        android:text="Update LEDs"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        android:textStyle="bold" />


                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/figtree_bold"
                android:text="Bay Calibration"
                android:textColor="@color/black"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/tv_control_bay_management_fragment">


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/beige2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/tv_method_order_management"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/figtree_semibold"
                        android:gravity="center_horizontal"
                        android:text="Bay ID"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_order_id_order_management"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/figtree_semibold"
                        android:gravity="center_horizontal"
                        android:text="Bay No"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_bay_numbers_order_management"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/figtree_semibold"
                        android:gravity="center_horizontal"
                        android:text="Test"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_bay_deactivate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/figtree_semibold"
                        android:gravity="center_horizontal"
                        android:text="Deactivate"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_bay_list_bay_calibration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="vertical" />


            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>