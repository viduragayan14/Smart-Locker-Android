<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    tools:context=".fragments.CourierListFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_save_order_list"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_courier_list_courier_settings"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/btn_save_order_list"
        style="@style/round_orange_btn_style_new"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/pill_shaped_orange_btn">

        <TextView
            android:id="@+id/text_save2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/figtree_semibold"
            android:text="Save Positions"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold" />


    </RelativeLayout>
</RelativeLayout>